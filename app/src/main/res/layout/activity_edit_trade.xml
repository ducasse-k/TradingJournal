<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tlEdit"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/floral_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Edit Mode"
            android:textAlignment="center"
            android:textColor="@color/cg_blue"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TableRow android:padding="5dp">

        <TextView
            android:id="@+id/tv_tickerSymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Ticker Symbol"
            android:textColor="@color/cg_blue"
            android:textSize="18sp"
            android:textStyle="bold" />
    </TableRow>

    <include layout="@layout/calculations_first_row" />

    <include layout="@layout/calculations_second_row" />

    <TableRow android:padding="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etWillingToLose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="How much are you willing to lose?"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>
    </TableRow>

    <TableRow android:padding="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:autoLink="all"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="Notes"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="none" />
        </com.google.android.material.textfield.TextInputLayout>

    </TableRow>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Delete"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Finish Editing"
            android:textColor="@color/white" />

    </LinearLayout>
    <include layout="@layout/calculations_stop_loss" />

    <include layout="@layout/result" />

</TableLayout>